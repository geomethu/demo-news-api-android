<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="-2dp"
    android:paddingRight="0dp"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_centerInParent="true"
            android:paddingTop="40dp">

            <ImageView android:src="@drawable/common_full_open_on_phone"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal" />
            <!--            <ImageView android:src="@drawable/boperations"
                            android:layout_width="fill_parent"
                            android:layout_height="42dp" />-->


            <android.support.design.widget.TextInputLayout
                style="@style/CustomEditTextAppearance"
                android:id="@+id/tv_login_user"
                android:layout_width="fill_parent"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_register_email"
                    android:layout_width="fill_parent"
                    android:hint="@string/Enteruseremail"
                    style="@style/CustomEditTextAppearance"
                    android:inputType="textEmailAddress"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                style="@style/CustomEditTextAppearance"
                android:id="@+id/tv_login_password"
                android:layout_width="fill_parent"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="fill_parent"
                    android:inputType="textPassword"
                    style="@style/CustomEditTextAppearance"
                    android:width="1dp"
                    android:hint="@string/Enterpassword"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                style="@style/CustomEditTextAppearance"
                android:id="@+id/tv_login_password_confirm"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_login_password_confirm"
                    android:layout_width="fill_parent"
                    android:inputType="textPassword"
                    style="@style/CustomEditTextAppearance"
                    android:width="1dp"
                    android:hint="@string/Enterpasswordconfirm"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:inputType="textCapWords"
                android:background="@drawable/button_curved_blue_bg"
                android:layout_marginBottom="24dp"
                android:textColor="@color/white"
                android:padding="4dp"
                android:text="@string/btnSignup"/>


            <TextView android:id="@+id/link_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Already have an account? Sign In"
                android:onClick="signIn"
                android:gravity="center"
                android:textSize="16dip"/>



            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </RelativeLayout>


</ScrollView>